<div class="row">
  <div class="form-group">
    <label for="transaction_description">Description</label>
    <input
      class="form-control"
      type="text"
      id="transaction_description"
      placeholder="What'd we do?"
      name="transaction[description]"
    >
  </div>
</div>

<div class="row">

  <div class="form-group col-xs-6">
   <label for="transaction_total">Total Amount</label>

   <div class="input-group">
     <span class="input-group-addon">$</span>
      <input
        class="form-control"
        type="number"
        id="transaction_total"
        name="transaction[total]"
      >
      <span class="input-group-addon">.00</span>
    </div>

  </div>

  <div class="form-group col-xs-6">
    <label for="transaction_date">Date</label>
    <input class="form-control" type="date" id="transaction_date" name="transaction[date]">
  </div>

</div>

<div class="row">

  <div class="form-group col-xs-6">
    <label for="creditor_name">Creditor</label>
    <input
      class="form-control"
      type="text"
      id="creditor_name"
      placeholder="Who paid?"
    >
  </div>

  <div class="form-group col-xs-6">
    <label for="creditor_share">Creditor Share</label>
    <div class="input-group">
      <span class="input-group-addon">$</span>
      <input
        class="form-control unmodified-amount"
        type="number"
        id="creditor_share"
      >
      <span class="input-group-addon">.00</span>
    </div>
  </div>

</div

<div class="row">
  <div class="form-group" id="debtors">
    <button class="btn btn-success" id="add_debtor">Add Debtor</button>
    <input class="btn btn-primary" type="submit" id="transaction_submit">
  </div>
</div>
